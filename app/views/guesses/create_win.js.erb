document.querySelectorAll('[data-letter="<%= params[:guess].upcase %>"]').forEach((element) => {
  element.setHTML('<%= params[:guess].upcase %>');
});

document.querySelector('#guessed_box').setHTML(
  "<%= session[:guesses].join(', ') %>"
);

document.querySelector('#win-box').setHTML("You got it!");
$("#play-again-box").show();
$("#guess_form").hide();